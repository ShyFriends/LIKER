<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorLightGrayLiker"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/colorNavyLiker">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:text="Register"
            android:textColor="@color/colorYellowLiker"
            android:textSize="50dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/liker_origin"
            android:layout_alignParentRight="true"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_username_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Username"
        android:textSize="20dp"
        android:textColor="@color/colorNavyLiker"

         />

    <EditText
        android:id="@+id/editText_username_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView_username_login"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/corners_white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        />

    <Button
        android:id="@+id/button_username_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_username_login"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/corners_navy"
        android:text="Duplicate Check"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textView_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_username_check"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="@color/colorNavyLiker"/>

    <EditText
        android:id="@+id/editText_email_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/textView_email_login"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/corners_white"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        />

    <Button
        android:id="@+id/button_email_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_email_login"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/corners_navy"
        android:text="Verify"
        android:textSize="20dp"/>
</RelativeLayout>
