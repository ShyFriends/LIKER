<script type="text/javascript">
  
setTimeout(heartrateinfo, 0);
setInterval(heartrateinfo, 1000);
setTimeout(heartratenum, 0);
setInterval(heartratenum, 1000);

function heartrateinfo(){
    $.ajax({ 
          type:"GET",
          url:"/heartrate_info",
            success: function(data){
              console.log("SUCCESS: ", data);
              document.getElementById('avg').value = parseInt(data.avg)+" bpm";
              document.getElementById('max').value = data.max+" bpm";
              document.getElementById('min').value = data.min+" bpm";              
            },
            error: function(data){
             console.log('ERROR: ', data);
            },   
          });
}

function heartratenum(){
    $.ajax({ 
          type:"GET",
          url:"/heartrate_num",
            success: function(data){
              console.log("SUCCESS: ", data);
              if(data.heartrate==null){
                document.getElementById('heartrate').value = "Not Connect";  
              }
              else{ document.getElementById('heartrate').value = data.heartrate+" bpm";}           
            },
            error: function(data){
             console.log('ERROR: ', data);
            },   
          });
}

</script>

